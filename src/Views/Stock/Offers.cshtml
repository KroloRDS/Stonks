@model IEnumerable<TradeOffer>

<h1>Offers</h1>
<table class="table">
	<thead>
		<tr>
			<th><b>Type</b></th>
			<th><b>Amount</b></th>
			<th><b>Price</b></th>
			<th><b>Stock</b></th>
			<th><b>Cancel</b></th>
		</tr>
	</thead>
	<tbody>
		@{
		foreach (var offer in Model)
		{
			<tr>
				<td>@Html.DisplayFor(modelItem => offer.Type)</td>
				<td>@Html.DisplayFor(modelItem => offer.Amount)</td>
				<td>@Html.DisplayFor(modelItem => offer.Price)</td>
				<td>@Html.DisplayFor(modelItem => offer.StockId)</td>
				<td><a href="../cancelOffer/@(offer.Id)">Cancel</a></td>
			</tr>
		}
	}</tbody>
</table>
