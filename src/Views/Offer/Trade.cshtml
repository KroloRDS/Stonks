@model PlaceOfferViewModel
@{
	ViewData["Title"] = "Add offer";
}

<h1>Add offer</h1>
@{
	var description = Model.OfferType == OfferType.Buy ? "BUY: " : "SELL: ";
	description += Model.StockSymbol;
	<h2>@Html.DisplayFor(modelItem => description)</h2>
}

<form asp-action="Place">
	<label for="amount">Amount:</label>
	<input type="number" id="amount" name="amount">
	<label for="price">Price:</label>
	<input type="number" id="price" name="price">
	<input type="submit" value="Submit">
	<input id="stockId" name="stockId"
		value="@Model.StockId" type="hidden" />
	<input id="offerType" name="offerType"
		value="@Model.OfferType" type="hidden" />
</form>
